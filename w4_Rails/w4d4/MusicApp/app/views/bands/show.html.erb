<h1>About <%= @band.name %></h1>

<h2>Albums</h2>
<% @band.albums.each do |album| %>
  <%= link_to name="#{album.name}", album_url(album), method: :get %>
  <br>
<% end %>

<%= button_to name="List of bands", bands_url, method: :get %>

<%= button_to name="Edit band info", edit_band_url(@band), method: :get %>

<%= button_to name="Remove band", band_url(@band), method: :delete %>

<%= button_to name="Add an Album", new_band_album_url(@band), method: :get %>
